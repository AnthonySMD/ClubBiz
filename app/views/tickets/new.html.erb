<h1>Ticket Form</h1>
	<%= form_for(@ticket, url: tickets_new_path) do |f| %>
	  <% if @ticket.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being purchased:</h2>

	      <ul>
	      <% @ticket.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <table align="center">
	    <tr><div>
	      <td><%= f.label :number_of_tickets %></td>
	      <td><%= f.text_field :number_tickets %></td>
	    </div></tr>
	    </table>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
